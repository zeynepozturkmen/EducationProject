
@{
    Layout = null;
}



<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8" name="description" content="Log In and Sign Up Yo your Account">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up </title>
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">


    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="/formhelper/formhelper.min.css" />
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/formhelper/formhelper.bundle.min.js"></script>


</head>


<style>
    * {
        margin: 0px;
        padding: 0px;
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        -o-box-sizing: border-box;
        -ms-box-sizing: border-box;
    }

    .container {
        width: 100%;
        height: 100%;
        padding: 50px;
    }

    .container-inside {
        width: 801px;
        margin: auto;
        border-radius: 10px;
        perspective: 600px;
        display: flex;
        flex-wrap: wrap;
    }

    .left-side {
        width: 400px;
        height: 550px;
        border-radius: 10px 0px 0px 10px;
        perspective: 600px;
        background-color: #70E2CB;
    }

    .left-img {
        width: 100%;
        height: 100%;
        border-radius: 10px 0px 0px 10px;
    }

    .right-side {
        width: 400px;
        height: 550px;
        border-radius: 0px 10px 10px 0px;
        perspective: 600px;
        background-color: #394B63;
    }

    .right-side, .left-side {
        animation: pop 2s infinite ease-in-out;
    }

    .right-side {
        animation-delay: 1s;
        animation-iteration-count: 4;
    }

    keyframes pop {
        0%,100%

    {
        transform: translateZ(0px);
    }

    50% {
        transform: translateZ(20px);
        box-shadow: 5px 5px 100px 2px rgba(86, 86, 86, 0.57);
    }

    }
    /* start editing the right-size content */
    .buttons-container {
        width: 80%;
        height: 50px;
        margin: auto;
    }

    .sign-in, .sign-up {
        float: right;
        font-size: 10px;
        font-family: 'Raleway',sans-serif;
        width: 60px;
        padding: 5px;
        margin-top: 15px;
        outline: none;
        border: none;
        transition: all 0.5s ease-in-out;
    }

    .sign-in {
        border-radius: 10px 0px 0px 10px;
        background-color: #3c4652;
        color: rgba(255, 255, 255, 0.65);
    }

    .sign-up {
        border-radius: 0px 10px 10px 0px;
        background-color: #6edfcb;
        color: white;
    }

        .sign-in:hover, .sign-up:hover {
            width: 70px;
            cursor: pointer;
        }

    /* header and label edits */
    .header {
        width: 200px;
        margin: 100px 0px 0px 70px;
    }

    .hed lighter {
        margin-left: 20px;
    }

    .hed span {
        margin-left: 10px;
        color: #f1f1f1;
        border-bottom: 2px solid #6edfcb;
    }

    .hed {
        font-family: 'Quicksand',sans-serif;
        font-size: 100%;
        font-weight: lighter;
        color: rgba(255, 255, 255, 0.4);
        cursor: default;
    }

    .inputs-cont, .inputs-cont2 {
        width: 80%;
        margin: 35px 0px 0px 70px;
    }

    .input-label {
        font-size: 10px;
        color: #f1f1f1;
        font-weight: lighter;
        font-family: 'Quicksand',sans-serif;
        margin: 20px 0px 10px 0px;
        display: block;
    }

    .input-take {
        background-color: transparent;
        outline: none;
        border: none;
        width: 250px;
        padding: 5px;
        color: #f1f1f1;
        border-bottom: 2px solid rgba(209, 209, 209, 0.4);
    }

        .input-take::placeholder {
            font-size: 8px;
            color: rgba(209, 209, 209, 0.4);
        }

    .ch {
        margin: 15px 0px 10px 0px;
        font-family: 'Quicksand',sans-serif;
    }

    .ch-label {
        font-size: 10px;
        color: rgba(209, 209, 209, 0.4);
        font-family: 'Quicksand',sans-serif;
    }

        .ch-label span {
            margin-left: 10px;
            color: #f1f1f1;
            font-family: 'Quicksand',sans-serif;
            cursor: pointer;
            border-bottom: 2px solid #6edfcb;
        }

    /* **************************** */
    input[type="checkbox"] {
        -webkit-appearance: initial;
        appearance: initial;
        background: gray;
        width: 10px;
        height: 10px;
        border: none;
        background: gray;
        position: relative;
        top: 10px;
    }

        input[type="checkbox"]:checked {
            background: #6edfcb;
            outline: none;
        }

            input[type="checkbox"]:checked:after {
                content: "\2713";
                color: #333;
                position: absolute;
                left: 50%;
                top: 50%;
                -webkit-transform: translate(-50%,-50%);
                -moz-transform: translate(-50%,-50%);
                -ms-transform: translate(-50%,-50%);
                transform: translate(-50%,-50%);
            }

    .send {
        display: block;
        margin: 40px 0px 0px 90px;
        width: 90px;
        padding: 5px;
        border-radius: 15px;
        border: none;
        outline: none;
        color: #f1f1f1;
        background-color: #6edfcb;
        border: 2px solid #6edfcb;
        transition: all 0.5s ease-in-out;
    }

        .send:hover {
            background-color: transparent;
            cursor: pointer;
        }
</style>

<body>


    @model EducationProject.Contract.RequestModel.User.LoginRequestModel

    <section class="container">
        <section class="container-inside">
            <div class="left-side">
                <img src="https://e.top4top.net/p_649v02so1.png" class="left-img" title="sign up now and save 1200$">
            </div>
            <div class="right-side">

                <div class="buttons-container">
                    <button type="button" class="sign-up">Sign Up</button>
                    <button type="button" class="sign-in">Sign In</button>
                </div>

                <div class="header">
                    <h3 class="hed">Sign In <lighter> or </lighter><span>Sign Up</span></h3>
                </div>

                <form class="inputs-cont" asp-formhelper="true" asp-controller="Account" asp-action="CreateAccount" method="post" asp-enableButtonAfterSuccess="true">
                    

                    <label class="input-label">PASSWORD</label>
                    <input type="password" class="input-take" placeholder="* * * * * * * *" asp-for="Password" maxlength="12">
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <label class="input-label">E-MAIL</label>
                    <input type="email" class="input-take" placeholder="Your email goes here" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <!-- check box -->
                    <br>

                    <!-- button -->
                    <input class="send" type="submit" value="Sign Up">
                </form>
                <!-- for 2 -->



                <form class="inputs-cont2 login-container" asp-formhelper="true" asp-controller="Account" asp-action="Login" method="post" asp-enableButtonAfterSuccess="true">

                    <label class="input-label">PASSWORD</label>
                    <input type="password" class="input-take" placeholder="* * * * * * * *" maxlength="12" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <label class="input-label">E-MAIL</label>
                    <input type="email" class="input-take" placeholder="Your email goes here" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <!-- button -->
                    <input class="send" type="submit" value="Sign In">
                </form>

                <!-- end it fast -->
            </div>
        </section>
    </section>
    <script src="main.js"></script>
</body>




</html>


<script>
    var signIn = document.querySelector(".sign-in"),
        signUp = document.querySelector(".sign-up"),
        textLabel = document.querySelector(".hed"),
        Form = document.querySelector(".inputs-cont"),
        Form2 = document.querySelector(".inputs-cont2"),
        UserDetails = document.querySelector(".input-take"),
        goSend = document.querySelector(".send");
    Form2.style.display = "none";
    signIn.onclick = function () {
        "use strict";
        Form.style.display = "none";
        Form2.style.display = "block";
        document.title = 'Sign In';
        textLabel.innerHTML = "Sign Up <lighter> or </lighter><span>Sign In </span>";
    };
    signUp.onclick = function () {
        "use strict";
        Form2.style.display = "none";
        Form.style.display = "block";
        document.title = 'Sign Up';
        textLabel.innerHTML = "Sign In <lighter> or </lighter><span>Sign Up </span>";
    };

</script>