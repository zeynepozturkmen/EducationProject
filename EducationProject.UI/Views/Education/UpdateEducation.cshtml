
@{
    //ViewData["Title"] = "UpdateEducation";
}

@model EducationProject.Contract.RequestModel.Education.UpdateEducationRequestModel


<br />

<form asp-formhelper="true" asp-controller="Education" asp-action="UpdateEducation" method="post" asp-enableButtonAfterSuccess="true">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Education Name</label>
            <input type="text" class="form-control" id="inputEmail4" value="@Model.Name" asp-for="Name">

            <input type="hidden" class="form-control" id="inputEmail4" value="@Model.Id" asp-for="Id">

            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Time</label>
            <input type="number" class="form-control" id="inputPassword4" asp-for="Time" value="@Model.Time" placeholder="Hour">
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label for="inputAddress">Cost</label>
        <input type="number" class="form-control" id="inputAddress" value="@Model.Cost" asp-for="Cost">

    </div>
    <div class="form-group">
        <label for="inputAddress2">Quota</label>
        <input type="number" class="form-control" id="inputAddress2" value="@Model.Quota" asp-for="Quota">
        <span asp-validation-for="Quota" class="text-danger"></span>
    </div>


    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputCity">Category</label>
            <select class="form-control" asp-for="CategoryId">
                @if (ViewBag.CategoryList != null)
                {
                    @foreach (var item in ViewBag.CategoryList)
                    {
                        if (item.Id == Model.CategoryId)
                        {
                            <option value="@item.Id" selected>@item.Description</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Description</option>
                        }

                    }
                }


            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label for="inputCity"></label>
            <select class="form-control" asp-for="EducationInformationId">

                @if (ViewBag.TeacherInformationList != null)
                {
                    @foreach (var item in ViewBag.TeacherInformationList)
                    {
                        if (item.Id == Model.EducationInformationId)
                        {
                            <option value="@item.Id" selected>@item.Description</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Description</option>
                        }

                    }
                }


            </select>
            <span asp-validation-for="EducationInformationId" class="text-danger"></span>
        </div>

    </div>


    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>